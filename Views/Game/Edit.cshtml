@model GameTrack.Models.Game

@{
    ViewData["Title"] = "Edit Game";
}

<div class="container mt-5">
    <h2>Edit Game Details</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Developer" class="control-label"></label>
            <input asp-for="Developer" class="form-control" />
            <span asp-validation-for="Developer" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FinishedDate" class="control-label"></label>
            <input asp-for="FinishedDate" type="date" class="form-control" />
            <span asp-validation-for="FinishedDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rating" class="control-label"></label>
            <input asp-for="Rating" type="number" class="form-control" min="0" max="10" />
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Review" class="control-label"></label>
            <textarea asp-for="Review" class="form-control"></textarea>
            <span asp-validation-for="Review" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Game Genre</label>
            <div class="form-check">
                <input type="radio" asp-for="Genre" class="form-check-input" value="Action" id="genreAction" checked="@(Model.Genre == "Action" ? "checked" : "")" />
                <label class="form-check-label" for="genreAction">Action</label>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Genre" class="form-check-input" value="Adventure" id="genreAdventure" checked="@(Model.Genre == "Adventure")" />
                <label class="form-check-label" for="genreAdventure">Adventure</label>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Genre" class="form-check-input" value="RPG" id="genreRPG" checked="@(Model.Genre == "RPG" ? "checked" : "")" />
                <label class="form-check-label" for="genreRPG">RPG</label>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Genre" class="form-check-input" value="Simulation" id="genreSimulation" checked="@(Model.Genre == "Simulation" ? "checked" : "")" />
                <label class="form-check-label" for="genreSimulation">Simulation</label>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Genre" class="form-check-input" value="Strategy" id="genreStrategy" checked="@(Model.Genre == "Strategy" ? "checked" : "")" />
                <label class="form-check-label" for="genreStrategy">Strategy</label>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Genre" class="form-check-input" value="Sports" id="genreSports" checked="@(Model.Genre == "Sports" ? "checked" : "")" />
                <label class="form-check-label" for="genreSports">Sports</label>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Genre" class="form-check-input" value="Puzzle" id="genrePuzzle" checked="@(Model.Genre == "Puzzle" ? "checked" : "")" />
                <label class="form-check-label" for="genrePuzzle">Puzzle</label>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Genre" class="form-check-input" value="Horror" id="genreHorror" checked="@(Model.Genre == "Horror" ? "checked" : "")" />
                <label class="form-check-label" for="genreHorror">Horror</label>
            </div>
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update Game</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
