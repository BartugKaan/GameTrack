@model GameTrack.Models.Game

@{
    ViewData["Title"] = "Delete Game";
}

<div class="container mt-5 text-center">
    <h2>Are you sure you want to delete this game?</h2>

    <div class="card text-center">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <img src="~/img/@Model.Image" class="card-img-top" alt="@Model.Title" style="width:300px;" />
            <p class="card-text"><strong>Genre:</strong> @Model.GenreNavigation?.Name</p>
            <p class="card-text"><strong>Developer:</strong> @Model.Developer</p>
            <p class="card-text"><strong>Release Date:</strong> @Model.FinishedDate.ToString("yyyy-MM-dd")</p>
            <p class="card-text"><strong>Rating:</strong> @Model.Rating</p>
            <p class="card-text"><strong>Review:</strong> @Model.Review</p>
        </div>
            <form asp-action="Delete" method="post" class="my-2">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    
</div>
