@model IEnumerable<GameTrack.Models.Game>

@{
    ViewData["Title"] = "Game Index";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Game List</h2>
        <a asp-action="Create" class="btn btn-primary">Add New Game</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Game Title</th>
                <th scope="col">Game Image</th>
                <th scope="col">Game Genre</th>
                <th scope="col">Game Developer</th>
                <th scope="col">Release Date</th>
                <th scope="col">Game Rating</th>
                <th scope="col">Game Review</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var game in Model)
                {
                    <tr>
                        <td>@game.Id</td>
                        <td>@game.Title</td>
                         <td>
                            <img src="~/img/@game.Image" alt="@game.Title" style="width: 150; height: auto;">
                        </td>
                        <td>@game.Genre</td>
                        <td>@game.Developer</td>
                        <td>@game.FinishedDate.ToString("yyyy-MM-dd")</td>
                        <td>@game.Rating</td>
                        <td>@game.Review</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@game.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@game.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No games found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
